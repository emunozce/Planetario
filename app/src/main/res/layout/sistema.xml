<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estrellas"
    tools:context=".PlanetasActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Contenido de los planetas -->
            <!-- Sol -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="50dp">

                <ImageView
                    android:id="@+id/sunImage"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@drawable/sun" />

                <TextView
                    android:id="@+id/sunLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sol"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Mercurio -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="50dp">

                <ImageView
                    android:id="@+id/mercuryImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/mercury" />

                <TextView
                    android:id="@+id/mercuryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercurio"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Venus -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/venusImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/venus" />

                <TextView
                    android:id="@+id/venusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venus"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Tierra -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/tierraImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/earth" />

                <TextView
                    android:id="@+id/tierraLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tierra"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Marte -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/marteImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/mars" />

                <TextView
                    android:id="@+id/marteLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marte"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Jupiter -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/jupiterImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/jupiter" />

                <TextView
                    android:id="@+id/jupiterLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jupiter"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Saturno -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/saturnoImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/saturn" />

                <TextView
                    android:id="@+id/saturnoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturno"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Urano -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/uranoImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/uranus" />

                <TextView
                    android:id="@+id/uranoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urano"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Neptuno -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="40dp">

                <ImageView
                    android:id="@+id/neptunoImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/neptune" />

                <TextView
                    android:id="@+id/neptunoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neptuno"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="104dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="goBack"
        android:src="@drawable/regreso_inicio" />
</RelativeLayout>
